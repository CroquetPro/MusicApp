<h1>New Track</h1>
<form action="<%= tracks_url %>" method="post">
  <%= auth_token %>

  <label for="Title">Title</label>
  <input
     id="Title"
     name="[track][title]"
     type="text"
     value="<%= @track.title %>"
     placeholder="Track Title">
  <br>
  <br>
  <label for="album">album</label>
  <select name="[track][album_id]">
    <option></option>
    <% Album.all.each do |album| %>
    <option value="<%= album.id %>"
      <%= "selected" if @track.album_id == album.id %>
      ><%= album.name %></option>
    <% end %>
  </select>

  <br>
  <br>
  Regular <input type="radio" name="[track][ttype]" value="Regular">
  Bonus <input type="radio" name="[track][ttype]" value="Bonus">
  <br>
  <br>
  <input type="textarea" name="[track][lyrics]" placeholder="Lyrics">
  <br>
  <br>
  <input type="submit" value="Add Track">
</form>
